@{
    ViewBag.CallBack = "CallBackPopUpModal(resp,tableId);";
}
<div id="modal-add-edit-tbl-@ViewBag.TableId" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-md modal-dialog-scrollable" id="md-dialog">
        <div class="modal-content" id="model-content-tbl-@ViewBag.TableId">
            <div class="modal-header">
                <h5 class="modal-title" id="heading-popup-tbl-@ViewBag.TableId">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <partial name="_Form" />
            </div>
            <div class="modal-footer" id="footer-@ViewBag.TableId">
                <button type="button" class="btn btn-link mr-1" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-primary mr-1" id="btn-submit-@ViewBag.TableId">Save</button>
            </div>
        </div>
    </div>
</div>
<script>
    "use strict";

    $(document).ready(function () {
        $('#btn-submit-@ViewBag.TableId').click(function (e) {
            $('#frm-@ViewBag.FormId').submit();
            e.preventDefault();
            return false;
        })
        $('#modal-add-edit-tbl-@ViewBag.TableId').on('hidden.bs.modal', function (e) {
            $('.field-validation-error').empty();
            $('form .input-validation-error').removeClass('input-validation-error');
             $('#frm-@ViewBag.FormId').trigger('reset');
        });
        $('#modal-add-edit-tbl-@ViewBag.TableId').on('shown.bs.modal', function (e) {
            $("#frm-@ViewBag.FormId")[0].scrollIntoView();
        });
    });
</script>